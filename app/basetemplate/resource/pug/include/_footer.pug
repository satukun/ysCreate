header#js-header.l-header
  div.md-head__box
    span.md-head__lang JA/
      a(href="#") EN
    a.md-side__menu(href="javascript:void(0);")
      - for (var i = 0; i < 3; i++)
        span.md-side__menulist
    h1.md-head__title
      a(href="/")
        img(src="/img/logo-il.png",alt="Interlink")
